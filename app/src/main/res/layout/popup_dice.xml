<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="360dp"
    android:layout_gravity="center">
    <ImageView
        android:id="@+id/fundoPop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/skill_critical"
        />
    <ImageView
        android:id="@+id/bola"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/background_bola" />


    <TextView
        android:id="@+id/numerodado"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/numeroSorteado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="D100"
        android:gravity="center"
        android:textColor="#1E1E1E"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/numeroSorteado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bola"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="100"
        android:textColor="#FFFFFF"
        android:textSize="140dp" />



    <Button
        android:id="@+id/botaofechar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/quiz_background_texto"
        android:text="FECHAR" />

</RelativeLayout>